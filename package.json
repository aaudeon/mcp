{
  "name": "mcp-weather-server",
  "version": "1.0.0",
  "description": "Serveur MCP fournissant des informations météorologiques en temps réel via Open-Meteo API",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "echo \"Tests à implémenter\" && exit 0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp", 
    "weather", 
    "llm", 
    "model-context-protocol", 
    "open-meteo", 
    "typescript"
  ],
  "author": "AAU",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
