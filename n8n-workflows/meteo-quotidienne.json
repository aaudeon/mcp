{
  "name": "Météo Quotidienne",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 8 * * *"
            }
          ]
        }
      },
      "id": "cron-trigger",
      "name": "Déclenchement quotidien 8h",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [
        240,
        300
      ]
    },
    {
      "parameters": {
        "url": "https://mcp-weather.top-exo.fr/api/weather",
        "options": {
          "bodyContentType": "json",
          "jsonBody": "{\n  \"city\": \"Paris\"\n}"
        },
        "authentication": "genericCredentialType",
        "genericAuthType": "httpBasicAuth"
      },
      "id": "weather-request",
      "name": "Obtenir météo Paris",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [
        460,
        300
      ]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "weather-condition",
              "leftValue": "={{ $json.temperature }}",
              "rightValue": 20,
              "operator": {
                "type": "number",
                "operation": "gt"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "temperature-check",
      "name": "Température > 20°C ?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [
        680,
        300
      ]
    },
    {
      "parameters": {
        "message": "☀️ Bonne journée ! Il fait {{ $('weather-request').item.json.temperature }}°C à Paris avec {{ $('weather-request').item.json.description }}",
        "additionalFields": {},
        "options": {}
      },
      "id": "good-weather-message",
      "name": "Message beau temps",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [
        900,
        200
      ]
    },
    {
      "parameters": {
        "message": "🌧️ Pensez à prendre un parapluie ! Il fait {{ $('weather-request').item.json.temperature }}°C à Paris avec {{ $('weather-request').item.json.description }}",
        "additionalFields": {},
        "options": {}
      },
      "id": "bad-weather-message",
      "name": "Message mauvais temps",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [
        900,
        400
      ]
    }
  ],
  "connections": {
    "Déclenchement quotidien 8h": {
      "main": [
        [
          {
            "node": "Obtenir météo Paris",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Obtenir météo Paris": {
      "main": [
        [
          {
            "node": "Température > 20°C ?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Température > 20°C ?": {
      "main": [
        [
          {
            "node": "Message beau temps",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Message mauvais temps",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false,
  "settings": {
    "executionOrder": "v1"
  },
  "versionId": "1",
  "meta": {
    "templateCredsSetupCompleted": true,
    "instanceId": "mcp-weather-example"
  },
  "id": "weather-daily-notification",
  "tags": [
    {
      "createdAt": "2025-06-10T00:00:00.000Z",
      "updatedAt": "2025-06-10T00:00:00.000Z",
      "id": "weather",
      "name": "météo"
    }
  ]
}
