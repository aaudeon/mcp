{
  "description": "Configuration MCP pour le serveur météo",
  "version": "1.0.0",
  "mcpServers": {
    "weather-docker": {
      "description": "Serveur météo MCP via Docker",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--env-file",
        "/path/to/your/mcp-weather-server/.env",
        "mcp-weather-server"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "weather-local": {
      "description": "Serveur météo MCP local (développement)",
      "command": "node",
      "args": ["dist/index.js"],
      "cwd": "/path/to/your/mcp-weather-server",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "weather-npm": {
      "description": "Serveur météo MCP via npm start",
      "command": "npm",
      "args": ["start"],
      "cwd": "/path/to/your/mcp-weather-server"
    }
  },
  "examples": {
    "get_current_weather": {
      "tool": "get_weather",
      "description": "Obtenir la météo actuelle pour Paris",
      "arguments": {
        "city": "Paris",
        "country": "FR",
        "lang": "fr",
        "units": "metric"
      }
    },
    "get_weather_forecast": {
      "tool": "get_weather_forecast", 
      "description": "Obtenir les prévisions pour New York",
      "arguments": {
        "city": "New York",
        "country": "US",
        "lang": "fr",
        "units": "metric"
      }
    },
    "get_weather_by_coordinates": {
      "tool": "get_weather_by_coordinates",
      "description": "Obtenir la météo par coordonnées GPS (Tokyo)",
      "arguments": {
        "lat": 35.6762,
        "lon": 139.6503,
        "lang": "fr",
        "units": "metric"
      }
    }
  }
}
